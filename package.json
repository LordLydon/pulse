{
  "name": "pulse-framework",
  "version": "2.2.5",
  "description": "Global state and logic framework for reactive Javascript applications.",
  "main": "dist/pulse.js",
  "module": "dist/pulse.esm.js",
  "scripts": {
    "test": "mocha --exit",
    "test-debug": "mocha --inspect-brk",
    "build": "echo \"Building Pulse Framework...\" && rollup -c build/rollup.prod.config.js",
    "build:publish": "echo \"Building Pulse Framework...\" && rollup -c build/rollup.prod.config.js && npm publish",
    "dev": "rollup -c build/rollup.dev.config.js --watch",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs --dest ./docs/dist/",
    "now-build": "npm run docs:build"
  },
  "author": "Jamie Pine",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pulse-framework/pulse"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@rollup/plugin-typescript": "^2.1.0",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "eslint-config-prettier": "^6.9.0",
    "jest": "^24.9.0",
    "mocha": "^7.0.0",
    "prettier": "1.19.1",
    "rollup": "^1.29.0",
    "rollup-plugin-babel": "^4.3.3",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4",
    "vuepress": "^1.2.0"
  }
}
